{
  "name": "mybricks-webview",
  "displayName": "MyBricks.ai",
  "description": "MyBricks.ai 可视化开发平台 - VSCode 集成版，支持小程序、H5 页面可视化搭建",
  "version": "0.1.1",
  "publisher": "mybricks",
  "repository": {
    "type": "git",
    "url": "https://github.com/mybricks/mybricks-ide-as-vscode-plugin.git"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mybricks.openIDE",
        "title": "Open MyBricks IDE",
        "icon": "src/extension/assets/icon.svg"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mybricks-sidebar",
          "title": "MyBricks",
          "icon": "src/extension/assets/icon.svg"
        }
      ]
    },
    "views": {
      "mybricks-sidebar": [
        {
          "type": "webview",
          "id": "mybricks.ide",
          "name": "MyBricks IDE",
          "visibility": "hidden"
        }
      ]
    },
    "configuration": {
      "title": "MyBricks",
      "properties": {}
    }
  },
  "dependencies": {
    "@mybricks/plugin-connector-http": "^1.2.36",
    "@mybricks/to-code-taro": "^1.1.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "antd": "^5.22.7",
    "dayjs": "^1.11.13",
    "@ant-design/icons": "^4.7.0"
  },
  "devDependencies": {
    "vite": "^5.1.0"
  },
  "scripts": {
    "build:webview": "vite build",
    "watch:webview": "vite build --watch"
  }
}
